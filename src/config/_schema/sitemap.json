{
  "sitemap": {
    "baseHref": {
      "doc": "The root URL of the site (no trailing slash)",
      "format": "String",
      "default": "https://www.bashkim.com"
    },

    "routes": {
      "sitemapIndex": {
        "pattern": {
          "doc": "The pattern to match the index of sitemaps",
          "format": "String",
          "default": "/sitemap.xml"
        }
      },

      "sitemap": {
        "pattern": {
          "doc": "The pattern to match an individual sitemap",
          "format": "String",
          "default": "/sitemap/:indexSlug.xml"
        }
      }
    },

    "indexes": {
      "doc": "Key-value pair of sitemaps present in the site",
      "format": "Object",
      "default": {
        "case-studies": "./src/middleware/caseStudies/sitemap",
        "pages": "./src/middleware/pages/sitemap"
      }
    }
  }
}
