{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "package.json", "yarn.lock"],
  "tasks": {
    "build": {
      "dependsOn": ["^codegen"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "codegen:deps": {
      "cache": false,
      "outputs": ["generated/"]
    },
    "codegen": {
      "dependsOn": ["codegen:deps"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^codegen"],
      "persistent": true
    },
    "lint:scripts": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.mjs", "**/*.js"]
    },
    "storybook:build": {
      "dependsOn": ["^codegen"],
      "outputs": ["storybook-static/"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
