{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist", "out"]
    },
    "lint:scripts": {
      "dependsOn": ["^lint:scripts"]
    },
    "codegen": {
      "dependsOn": ["^codegen"]
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["codegen"],
      "outputs": ["storybook-static"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
