{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "package.json", "yarn.lock"],
  "remoteCache": {
    "enabled": false
  },
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["codegen", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "codegen": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["codegen"],
      "persistent": true
    },
    "lint:scripts": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.mjs", "**/*.js"]
    },
    "storybook:build": {
      "cache": false,
      "dependsOn": ["codegen"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
