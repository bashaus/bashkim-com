{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "%components/*": ["./components/*"],
      "%contexts/*": ["./contexts/*"],
      "%libraries/*": ["./libraries/*"],
      "%machines/*": ["./machines/*"],
      "%public/*": ["../public/*"],
      "%styleguide/*": ["./styleguide/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": ["./types"],
    "incremental": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
