{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "%assets/*": ["./assets/*"],
      "%components/*": ["./components/*"],
      "%contexts/*": ["./contexts/*"],
      "%libraries/*": ["./libraries/*"],
      "%machines/*": ["./machines/*"],
      "%styleguide/*": ["./styleguide/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": ["./types"],
    "incremental": true
  },
  "include": ["next-env.d.ts", "./src"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"]
}
