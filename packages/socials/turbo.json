{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "codegen:deps": {
      "cache": false,
      "outputs": ["generated/github/schema.gql"]
    },

    "codegen": {
      "dependsOn": ["codegen:deps"],
      "inputs": [
        "codegen.ts",
        "generated/github/schema.gql",
        "graphql/github/**/*.gql"
      ]
    }
  }
}
