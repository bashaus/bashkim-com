{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build",
    "jsx": "react-jsx",
    "typeRoots": ["./types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "build/",
    "dist/",
    "node_modules/",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
}
