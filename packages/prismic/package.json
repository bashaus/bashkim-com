{
  "name": "@bashkim-com/prismic",
  "version": "1.0.0",
  "private": true,
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "typings": "./build/types/index.d.ts",
  "scripts": {
    "build": "yarn npm-run-all --aggregate-output --parallel build:**",
    "build:cjs": "tsc --build tsconfig.build.cjs.json",
    "build:esm": "tsc --build tsconfig.build.esm.json",
    "build:schema": "ts-node --project tsconfig.build.schema.json scripts/schema.ts",
    "build:types": "tsc --build tsconfig.build.types.json",
    "clean": "rm -rf build/",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "devDependencies": {
    "@types/node": "^17.0.13",
    "npm-run-all": "^4.1.5",
    "prismic-reactjs": "^1.3.4",
    "react": "^17.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "utility-types": "^3.10.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "prismic-reactjs": "^1.3.4"
  }
}
